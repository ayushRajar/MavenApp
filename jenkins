pipeline{
	agent any
	tools{
		maven 'Maven'
	}
	stages{
		stage('Checkout'){
			steps{
				git branch : 'main' , url : 'https://github.com/ayushRajar/MavenApp.git'
			}
		}
		stage('Build') {
			steps{
				sh 'mvn clean pakcage'
			}
		}
		stage('Test') {
			steps {
				sh 'mvn test'
			}
		}
		
		stage('Run Application'){
			steps {
				sh 'java -jar target/01MavenApp-1.0-SNAPSHOT.jar'
			}
		}
	}
	post {
		success {
			echo 'Successfuly deployed'
		}
		failure{
			echo 'Error in Deployment'
		}
	}
}
